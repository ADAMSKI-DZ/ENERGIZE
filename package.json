{
  "name": "energize",
  "version": "1.0.0",
  "description": "Get instant insights into your laptop battery's health with our diagnostic tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "author": "Malick Tammal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Malick-Tammal/ENERGIZE.git"
  },
  "devDependencies": {
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.energize.app",
    "win": {
      "target": "NSIS",
      "icon": "./asset/icons/App_icon.ico"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": false,
      "license": "license"
    },
    "directories": {
      "output": "./release"
    },
    "extraFiles": [
      {
        "from": "./battery_ps",
        "to": "battery_ps/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "battery": "^1.0.1",
    "battery_util": "^1.0.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "v8-compile-cache": "^2.4.0"
  }
}
